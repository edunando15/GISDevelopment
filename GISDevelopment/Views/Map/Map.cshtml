<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/ol@latest/ol.css">
    <script src="https://cdn.jsdelivr.net/npm/ol@latest/dist/ol.js"></script>
    <script src="js/openLayersFunctions.js"></script>
    <script src="js/constants.js"></script>
    <script src="js/mapViewer.js"></script>
</head>
<body>
<h1>Points of Interest</h1>
<select id="poi-select">
    <option value="Restaurant">Restaurants</option>
    <option value="PlaceOfWorship">Places of Worship</option>
    <option value="Monument">Monuments</option>
    <option value="Shop">Shops</option>
</select>
<button id="load-poi" onclick="loadPointsOfInterest(document.getElementById('poi-select').value)">Load Points</button>
<button id="remove-poi" onclick="removePointsOfInterest()">Remove Points</button>
<div id="map" style="width: 100%; height: 1000px;"> </div>
<script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
<script src="js/mapViewer.js"></script>
</body>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        window.map = initialiseMap(centralItaly);
    });
</script>
</html>