@using GISDevelopment.Models.DTOs
@model IEnumerable<GISDevelopment.Models.DTOs.ShopDTO>

@{
    ViewData["Title"] = "Monuments";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/ol@latest/ol.css">
    <script src="https://cdn.jsdelivr.net/npm/ol@latest/dist/ol.js"></script>
    <script src="js/openLayersFunctions.js"></script>
    <script src="js/constants.js"></script>
</head>

<body>
<table width="100%">
    <tr>
        <td width="20%">
            <h2> Shops </h2>
            @foreach (ShopDTO dto in Model)
            {
                <p> <a href='#' onclick="loadPoint(entityTypes.ItalianShop, @dto.Id)"> @dto.Name </a> </p>
            }
        </td>
        <td valign="top">
            <h2> Shops in the Map </h2>
            <div id="map" style="width: 100%; height: 1000px; float: right;"> </div>
        </td>
    </tr>
</table>
</body>

<script>
    var map; // Global variable for the map    
    initialiseMap(centralItaly);
</script>

</html>